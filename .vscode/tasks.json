{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/glad.c",
				"${workspaceFolder}/src/*.cpp",
				"${workspaceFolder}/src/Files/Engine/*.cpp",
				"${workspaceFolder}/src/Files/Engine/Objects/*.cpp",
				"${workspaceFolder}/src/Files/Engine/Render/OpenGL/*.cpp",
				"-o",
				"${workspaceFolder}/Output/TheFrim",
				"-lglfw",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}